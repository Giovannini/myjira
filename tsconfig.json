{
  "exclude": ["node_modules", "lib"],
  "include": ["./**/src"],
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": ["es2018"],
    "sourceMap": false,

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "skipLibCheck": true,

    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@leclerc/*": ["packages/common/*/src"],
      "@function/*": ["packages/function/*/src"],
      "@service-common/*": ["packages/services/common/*/src"]
    },
    "outDir": "lib",
    "typeRoots": ["node_modules/@types"],
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,

    "forceConsistentCasingInFileNames": true,
    "declaration": true
  }
}
